{
  "name": "hatp",
  "version": "0.0.7",
  "description": "Transpile HaLang to Javascript.",
  "main": "./lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "test": "cross-env BABEL_ENV=commonjs mocha --compilers js:babel-register --recursive",
    "test:watch": "npm test -- --watch",
    "test:examples": "node examples/",
    "cover": "cross-env BABEL_ENV=commonjs istanbul cover _mocha -- --compilers js:babel-register --recursive",
    "lint": "eslint src test",
    "build": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "prepublish": "npm run clean && npm run lint && npm run test && npm run build"
  },
  "files": [
    "lib",
    "src",
    "bin"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laosb/hatp.git"
  },
  "keywords": [
    "halang",
    "transpile",
    "ha",
    "transpiler",
    "javascript"
  ],
  "author": "Wexpo laosb@lasteam.net",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/laosb/hatp/issues"
  },
  "homepage": "https://github.com/laosb/hatp#readme",
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.1",
    "cross-env": "^5.0.5",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "istanbul": "^1.0.0-alpha",
    "mocha": "^3.5.0",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "acorn": "^5.1.1",
    "astravel": "^0.4.0",
    "astring": "^1.0.5",
    "commander": "^2.11.0",
    "fs-readdir-recursive": "^1.0.0",
    "glob": "^7.1.2",
    "output-file-sync": "^2.0.0",
    "path": "^0.12.7"
  },
  "bin": {
    "hatp": "bin/hatp"
  }
}
